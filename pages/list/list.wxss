.box{
  height: 100%;
  display: flex;
  flex-direction: column;

}

.box .message{
  
  height: 50rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.box .item{
  height: 150rpx;
  display:flex;
  flex-direction: row;

}

.box .item .img{
   /* float: left; */
   height: 120rpx;
   width: 120rpx;
   margin-left: 15rpx;
   margin-top: 15rpx;
}

.box .item .img image{
  height: 100%;
  width: 100%;
}

.box .item .showtxt{

  margin: 5rpx;
  /* width: 60px; */
  flex: 1;
  height :120rpx;

}

.box .showtxt text{
  font-size: 30rpx;
  font-style: bold;
  color: #333;
  display: block;
  margin-left: 5px
}


.box .showtxt .desc{
  color: #666;
  margin: 5px;
  display: -webkit-box;
  font-size:28rpx;
  line-height: 30rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  text-overflow:ellipsis;
}
